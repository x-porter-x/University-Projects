@model Manejo_Inventario.Models.Producto

@{
    ViewBag.Title = "Crear Nuevo Producto";
}

<!DOCTYPE html>

<html>
<head>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <style>
        .bg-dark {
            background-color: #343a40 !important;
        }

        .bg-17 {
            background-color: #ffd966 !important;
            font-weight: 700;
        }

        .bg-2 {
            background-color: #9bc2e6 !important;
            font-weight: 700;
        }

        .pname {
            background-color: #bfbfbf !important;
            font-weight: 700;
        }

        .mname {
            background-color: #f2f2f2 !important;
            font-weight: 400;
        }

        .text-white {
            color: #fff !important;
        }
    </style>

    <div class="jumbotron my-4 bg-dark text-white">
        <h2 class="display-4 font-italic">Crear Nuevo Producto</h2>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.HiddenFor(model => model.ID_Producto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.ID_Producto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID_Producto, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.HiddenFor(model => model.Linea, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Linea, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Linea, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Linea</p>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ID_Linea, ViewBag.LineasList as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Linea, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Nombre del Producto</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre_Producto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre_Producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Descripción</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Descripción (Horas)</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Duración, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Duración, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.Margen17, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Margen17, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Margen17, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.Margen2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Margen2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Margen2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.Precio_Elaboracion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Precio_Elaboracion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Precio_Elaboracion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear Producto y Continuar" class="btn btn-default" formaction="@Url.Action("Insertar_ProductoDB")" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver a Lista de Productos", "Index")
    </div>
</body>
</html>
