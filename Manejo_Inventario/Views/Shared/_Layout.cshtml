<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Administración de Inventario</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Administración de Inventario", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Ver Productos (Simplificado)", "Productos_Simplificado", "Home")</li>
                <li>@Html.ActionLink("Tipos de Materiales", "Ver_Tipos_Materiales")</li>
                <li>@Html.ActionLink("Materiales", "Ver_Materiales")</li>
                <li>@Html.ActionLink("Lineas", "Ver_Lineas", "Home")</li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
